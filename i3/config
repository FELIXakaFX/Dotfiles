        colors {
        background #20262E
        inactive_workspace #20262E #20262E #777777
        focused_workspace #29303A #29303A #FF6C40
        urgent_workspace #FF6C40 #29303A #FF6C40
        statusline #cccccc
        separator #777777
	}
}

#MiLight MODE

bindsym F12         mode MiLight

mode MiLight {
	set bash /home/anon/Documents/Bash/MiLight/miLIGHT.sh "bash /home/anon/Documents/Bash/MiLight/miLIGHT.sh"
	bindsym plus exec bash /home/anon/Documents/Bash/MiLight/miLIGHT.sh "\xC5\00\x55"
	bindsym 1 exec bash /home/anon/Documents/Bash/MiLight/miLIGHT.sh "\x40\x00\x55"
	bindsym 2 exec bash /home/anon/Documents/Bash/MiLight/miLIGHT.sh "\x40\x20\x55"
	bindsym 3 exec bash /home/anon/Documents/Bash/MiLight/miLIGHT.sh "\x40\x40\x55"
	bindsym 4 exec bash /home/anon/Documents/Bash/MiLight/miLIGHT.sh "\x40\x60\x55"
        bindsym 5 exec bash /home/anon/Documents/Bash/MiLight/miLIGHT.sh "\x40\x80\x55"
        bindsym 6 exec bash /home/anon/Documents/Bash/MiLight/miLIGHT.sh "\x40\xA0\x55"
        bindsym 7 exec bash /home/anon/Documents/Bash/MiLight/miLIGHT.sh "\x40\xC0\x55"
        bindsym 8 exec bash /home/anon/Documents/Bash/MiLight/miLIGHT.sh "\x40\xE0\x55"
        bindsym 9 exec bash /home/anon/Documents/Bash/MiLight/miLIGHT.sh "\x4E\xd\x55"
        bindsym 0 exec bash /home/anon/Documents/Bash/MiLight/miLIGHT.sh "\x4E\x1B\x55"
	bindsym period exec bash /home/anon/Documents/Bash/MiLight/miLIGHT.sh "\x45\00\x55"
	bindsym comma exec bash /home/anon/Documents/Bash/MiLight/miLIGHT.sh "\x46\00\x55"
	bindsym minus exec bash /home/anon/Documents/Bash/MiLight/Fade.sh 0.2
	bindsym space exec bash /home/anon/Documents/Bash/MiLight/Screen.sh -a
	bindsym Escape mode "default"
}

